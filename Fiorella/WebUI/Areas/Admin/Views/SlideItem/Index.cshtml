@model IEnumerable<SlideItem>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-light" asp-area="Admin" asp-controller="SlideItem" asp-action="Create">
	<h3>Create Slide</h3>
</a>


<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
	<div class="bg-secondary text-center rounded p-4">
		<div class="d-flex align-items-center justify-content-between mb-4">
			<h6 class="mb-0">Recent Salse</h6>
			<a href="">Show All</a>
		</div>
		<div class="table-responsive">
			<table class="table text-start align-middle table-bordered table-hover mb-0">
				<thead>
					<tr class="text-white">
						<th><input class="form-check-input" type="checkbox"></th>
						<th>Image</th>
						<th>Title</th>
						<th>Signature Image</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td><input class="form-check-input" type="checkbox"></td>
							<td><img class="rounded-circle flex-shrink-0" src="~/assets/img/@item.Image" alt="" style="width: 40px; height: 40px;"></td>
							<td>@item.Title</td>
							<td><img class="rounded-circle flex-shrink-0" src="~/assets/img/@item.ImageSignature" alt="" style="width: 40px; height: 40px;"></td>
							<td>
								<div class="row-cols-3">
									<a asp-area="Admin" asp-controller="SlideItem" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-danger">Detail</a>
									<a asp-area="Admin" asp-controller="SlideItem" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
									<a asp-area="Admin" asp-controller="SlideItem" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
<!-- Recent Sales End -->
