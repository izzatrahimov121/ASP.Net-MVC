@model SlideUpdateVM
@{
	ViewData["Title"] = "Update";
}

<h1>Update</h1>
<div class="col-6">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Update Shippind</h4>
			<form class="forms-sample formupdate" method="post">

				<div class="form-group">
					<label>Image</label>
					<img style="height:60px" src="~/assets/img/slider/@Model.ImagePath" />
					<input asp-for="Image" class="form-control" placeholder="Image">
					<span class="text-danger" asp-validation-for="Image"></span>
				</div>

				<div class="form-group">
					<label>Category</label>
					<input asp-for="Category" class="form-control" placeholder="Category">
					<span class="text-danger" asp-validation-for="Category"></span>
				</div>

				<div class="form-group">
					<label>Title</label>
					<input asp-for="Title" class="form-control" placeholder="Title">
					<span class="text-danger" asp-validation-for="Title"></span>
				</div>

				<div class="form-group">
					<label>Description</label>
					<input asp-for="Description" class="form-control" placeholder="Description">
					<span class="text-danger" asp-validation-for="Description"></span>
				</div>

				<a class="btn btn-primary mr-2 updatebtn">Submit</a>
				<a asp-action="Index" class="btn btn-light">Cancel</a>

			</form>
		</div>
	</div>
</div>